<% @form_fields.each do |form_field| %>
  <tr>
    <td><%= form_field.target_email %></td>
    <td><%= form_field.message_success %></td>
    <td><%= form_field.name_title %></td>
    <td><%= form_field.email_title %></td>
    <td><%= form_field.phone_title %></td>
    <td><%= form_field.message_title %></td>
    <td><%= link_to 'Show', form_field %></td>
    <td><%= link_to 'Edit', edit_form_field_path(form_field) %></td>
    <td><%= link_to 'Destroy', form_field, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

